<Window x:Class="ProjektKumulatywnyQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz WPF" Height="500" Width="700">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Pasek przycisków w Gridzie -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="TitleBox" Grid.Column="0" Text="Historia" Margin="0,0,8,0"/>
            <Button x:Name="AddQuizBtn" Grid.Column="1" Content="Dodaj" Margin="0,0,8,0"/>
            <Button x:Name="LoadBtn" Grid.Column="2" Content="Załaduj" Margin="0,0,8,0"/>
            <Button x:Name="SearchBtn" Grid.Column="3" Content="Szukaj" Margin="0,0,8,0"/>
            <Button x:Name="UpdateBtn" Grid.Column="4" Content="Edytuj" Margin="0,0,8,0"/>
            <Button x:Name="DeleteBtn" Grid.Column="5" Content="Usuń"/>
        </Grid>

        <!-- Lista quizów -->
        <ListBox x:Name="QuizList" Grid.Row="1" MouseDoubleClick="QuizList_MouseDoubleClick"/>

        <!-- Szczegóły quizu -->
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="QuizTitle" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
            <ItemsControl x:Name="QuestionsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,12">
                            <!-- Tekst pytania -->
                            <TextBlock Text="{Binding Text}" FontWeight="Bold"/>
                            <!-- Lista odpowiedzi -->
                            <ItemsControl ItemsSource="{Binding Answers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton Content="{Binding Text}" 
                                                     GroupName="{Binding DataContext.Id, RelativeSource={RelativeSource AncestorType=StackPanel}}" 
                                                     Tag="{Binding IsCorrect}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button x:Name="CheckBtn" Content="Sprawdź odpowiedzi" Margin="0,12,0,0" Width="150"/>
        </StackPanel>
    </Grid>
</Window>